<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Hospitalario</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema Hospitalario", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <li class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>..................................</li>
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="dropdown show">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Procesos
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Citas/index">Citas</a></li>
                            <li><a href="~/Ingresos/index">Ingresos</a></li>
                            <li><a href="~/AltaMedica/Newindex">Altas Medicas</a></li>
                        </ul>
                    </li>
                    <li class="dropdown show">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Mantenimientos
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Medicos/index">Medicos</a></li>
                            <li><a href="~/Pacientes/index">Pacientes</a></li>
                            <li><a href="~/Habitaciones/index">Habitaciones</a></li>
                        </ul>
                    </li>
                    <li class="dropdown show">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Consultas
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Consultas/Citas">Citas</a></li>
                            <li><a href="~/Consultas/Ingresos">Ingresos</a></li>
                            <li><a href="~/Consultas/Medicos">Medicos</a></li>
                            <li><a href="~/Consultas/Pacientes">Pacientes</a></li>
                            <li><a href="~/Consultas/AltaMedica">Altas Medicas</a></li>
                            <li><a href="~/Consultas/Habitaciones">Habitaciones</a></li>
                        </ul>
                        
                    </li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
            </li>
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema Hospitalario</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
